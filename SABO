<!DOCTYPE html>
<html>
<head>
    <title>Meu App Estado</title>
    <script src="cordova.js"></script>
    <script>
        document.addEventListener('deviceready', function() {
            // Informações do dispositivo
            var deviceInfo = 'Device Model: ' + device.model + '<br>' +
                             'Device Platform: ' + device.platform + '<br>' +
                             'Device UUID: ' + device.uuid + '<br>' +
                             'Device Version: ' + device.version;

            document.getElementById('deviceInfo').innerHTML = deviceInfo;

            // Estado da bateria
            window.addEventListener('batterystatus', function(status) {
                var batteryInfo = 'Battery Level: ' + status.level + '%<br>' +
                                  'Is Plugged: ' + (status.isPlugged ? 'Yes' : 'No');
                document.getElementById('batteryInfo').innerHTML = batteryInfo;
            }, false);
        }, false);
    </script>
</head>
<body>
    <h1>Informações do Dispositivo</h1>
    <div id="deviceInfo">Aguardando informações do dispositivo...</div>

    <h1>Estado da Bateria</h1>
    <div id="batteryInfo">Aguardando informações da bateria...</div>
</body>
</html>
